<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:paddingHorizontal="20dp"
        android:text="修改密码后，下次登陆时即可用手机号+新密码登录。"
        android:textSize="13sp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="20dp"
        android:paddingHorizontal="20dp">

        <TextView
            android:id="@+id/user_tv_oldPW"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="23dp"
            android:letterSpacing="0.05"
            android:text="原密码"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:typeface="serif" />

        <EditText
            android:id="@+id/user_ed_oldPW"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/user_tv_oldPW"
            android:hint="填写原密码"
            android:inputType="numberPassword"
            android:letterSpacing="0.05"
            android:maxLines="1"
            android:paddingHorizontal="13dp"
            android:textSize="15sp"
            android:theme="@style/edittext" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:paddingHorizontal="20dp">

        <TextView
            android:id="@+id/user_tv_newPW"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="23dp"
            android:letterSpacing="0.05"
            android:text="新密码"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:typeface="serif" />

        <EditText
            android:id="@+id/user_ed_newPW"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/user_tv_newPW"
            android:hint="填写新密码"
            android:inputType="numberPassword"
            android:letterSpacing="0.05"
            android:maxLines="1"
            android:paddingHorizontal="13dp"
            android:textSize="15sp"
            android:theme="@style/edittext" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:paddingHorizontal="20dp">

        <TextView
            android:id="@+id/user_tv_newPW2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="7dp"
            android:letterSpacing="0.05"
            android:text="确认密码"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:typeface="serif" />

        <EditText
            android:id="@+id/user_ed_newPW2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/user_tv_newPW2"
            android:hint="再次填写确认"
            android:inputType="numberPassword"
            android:letterSpacing="0.05"
            android:maxLines="1"
            android:paddingHorizontal="13dp"
            android:textSize="15sp"
            android:theme="@style/edittext" />

    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:paddingHorizontal="20dp"
        android:text="密码必须是8-16位的数字、字符的组合。"
        android:textSize="13sp" />

    <TextView
        android:id="@+id/user_tv_forgetPW"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="20dp"
        android:text="忘记原密码？"
        android:textColor="@color/orange"
        android:textSize="13sp" />

    <br.com.simplepass.loadingbutton.customViews.CircularProgressButton
        android:id="@+id/user_btn_modifyPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginHorizontal="15dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/btn_background"
        android:text="确定修改"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:letterSpacing="0.05"
        app:spinning_bar_color="#FFF"
        app:spinning_bar_padding="6dp"
        app:spinning_bar_width="4dp" />

</LinearLayout>