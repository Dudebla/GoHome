<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!--显示字母-->
    <TextView
        android:id="@+id/text_view_member_headerword"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:background="#ebebeb"
        android:gravity="center_vertical" />


    <ImageView android:id="@+id/image_view_protrait"
        android:layout_width="@dimen/list_protrait_size"
        android:layout_height="@dimen/list_protrait_size"
        android:layout_margin="@dimen/margin_xs"
        android:layout_below="@id/text_view_member_headerword"
        />

    <TextView android:id="@+id/text_view_username"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_xs"
        android:layout_marginRight="@dimen/margin_xs"
        android:layout_marginTop="@dimen/margin_xs"
        android:layout_below="@id/text_view_member_headerword"
        android:layout_toRightOf="@id/image_view_protrait"
        android:textSize="@dimen/font_size_l"
        android:ellipsize="end"
        android:singleLine="true"
        />

    <TextView android:id="@+id/text_view_address"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_xs"
        android:layout_toRightOf="@id/image_view_protrait"
        android:layout_below="@id/text_view_username"
        android:textSize="@dimen/font_size_s"
        android:ellipsize="end"
        android:singleLine="true"
        />



</RelativeLayout>