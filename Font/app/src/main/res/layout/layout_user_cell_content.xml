<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:visibility="gone">

    <!-- content header line -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/yellow"
        android:paddingBottom="7dp"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:paddingTop="7dp">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:src="@drawable/user_content_icon" />

        <TextView
            android:id="@+id/user_tv_publisher"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="发布组织"
            android:textColor="@color/red"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/user_tv_pubTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:text="发布时间"
            android:textColor="@color/red"
            android:textSize="15sp"/>

    </RelativeLayout>

    <!-- content header image -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/user_iv_cont_petPhoto"
            android:layout_width="match_parent"
            android:layout_height="205dp"
            android:scaleType="centerCrop"
            android:src="@drawable/dog" />

    </RelativeLayout>

    <!-- content body layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        android:paddingTop="9dp"
        android:paddingBottom="6dp"
        android:paddingLeft="12dp"
        android:paddingRight="12dp">

        <!-- name and area -->
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
            <!-- name -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="昵称:"/>

                <TextView
                    android:id="@+id/user_tv_cont_petName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingStart="2dp"
                    android:text="三三"/>

            </LinearLayout>
            <!-- area -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="地区:"/>

                <TextView
                    android:id="@+id/user_tv_cont_petArea"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingStart="2dp"
                    android:text="广东广州"/>

            </LinearLayout>

        </RelativeLayout>

        <!-- divider line -->
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginBottom="6dp"
            android:layout_marginTop="9dp"
            android:src="#e0e0e0" />

        <!-- gender and age -->
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
            <!-- gender -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="性别:"/>

                <TextView
                    android:id="@+id/user_tv_cont_petGender"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingStart="2dp"
                    android:text="♂"
                    android:textStyle="bold"/>

            </LinearLayout>
            <!-- age -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="年龄:"/>

                <TextView
                    android:id="@+id/user_tv_cont_petAge"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingStart="2dp"
                    android:text="1岁11个月"/>

            </LinearLayout>

        </RelativeLayout>

        <!-- divider line -->
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginBottom="6dp"
            android:layout_marginTop="7dp"
            android:src="#e0e0e0" />

        <!-- vaccination and sterilisation -->
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
            <!-- vaccination -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="疫苗:"/>

                <ImageView
                    android:id="@+id/user_iv_petVacn"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:paddingStart="2dp"
                    android:src="@drawable/yes"/>

            </LinearLayout>
            <!-- sterilisation -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="绝育:"/>

                <ImageView
                    android:id="@+id/user_iv_petStrl"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:paddingStart="2dp"
                    android:src="@drawable/no"/>

            </LinearLayout>

        </RelativeLayout>

        <!-- divider line -->
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginBottom="6dp"
            android:layout_marginTop="7dp"
            android:src="#e0e0e0" />

        <!-- description -->
        <TextView
            android:id="@+id/user_tv_cont_petDesc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="5"
            android:textSize="15sp" />

        <!-- request button
        <com.lai.library.ButtonStyle
            android:id="@+id/user_btn_content_want"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="带我回家"
            android:focusable="false"
            android:clickable="false"
            android:focusableInTouchMode="false"
            app:normal_color="#F1F1F1"
            app:press_color="#E9EEF2"
            app:stroke_color="#CCCDD0"
            app:stroke_width="1dp"/>
        -->
        <TextView
            android:id="@+id/user_btn_content_want"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/shape_user_circle_textview"
            android:gravity="center"
            android:text="带我回家"
            android:textSize="18sp"
            android:textColor="@color/red"/>
    </LinearLayout>

</LinearLayout>