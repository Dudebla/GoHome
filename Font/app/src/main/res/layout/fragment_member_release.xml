<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:met_iconLeft="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >


        <com.rengwuxian.materialedittext.MaterialEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="宠物姓名"
            android:layout_margin="@dimen/margin"
            app:met_iconLeft="@drawable/member_name"
            app:met_baseColor="@color/orange"
            app:met_primaryColor="@color/orange"/>


        <com.rengwuxian.materialedittext.MaterialEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="宠物年龄"
            android:layout_margin="@dimen/margin"
            app:met_iconLeft="@drawable/member_age"
            app:met_baseColor="@color/orange"
            app:met_primaryColor="@color/orange"/>



        <com.rengwuxian.materialedittext.MaterialEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="宠物性别"
            android:layout_margin="@dimen/margin"
            app:met_iconLeft="@drawable/member_gender"
            app:met_baseColor="@color/orange"
            app:met_primaryColor="@color/orange"/>



        <com.rengwuxian.materialedittext.MaterialEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="宠物类型"
            android:layout_margin="@dimen/margin"
            app:met_iconLeft="@drawable/member_type"
            app:met_baseColor="@color/orange"
            app:met_primaryColor="@color/orange"/>

        <com.rengwuxian.materialedittext.MaterialEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="宠物绝育情况"
            android:layout_margin="@dimen/margin"
            app:met_iconLeft="@drawable/member_sterilizine"
            app:met_baseColor="@color/orange"
            app:met_primaryColor="@color/orange"/>

        <com.rengwuxian.materialedittext.MaterialEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="宠物疫苗情况"
            android:layout_margin="@dimen/margin"
            app:met_iconLeft="@drawable/member_vaccine"
            app:met_baseColor="@color/orange"
            app:met_primaryColor="@color/orange"/>

        <com.rengwuxian.materialedittext.MaterialEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="宠物描述（性格等）"
            android:layout_margin="@dimen/margin"
            app:met_iconLeft="@drawable/member_describe"
            app:met_baseColor="@color/orange"
            app:met_primaryColor="@color/orange"/>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="宠物性别："
                android:layout_toLeftOf="@+id/radGro_gender">

            </TextView>

            <co.ceryle.radiorealbutton.RadioRealButtonGroup
                android:id="@+id/radGro_gender"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:rrbg_animateDrawables_enter="overshoot"
                app:rrbg_animateTexts_enter="overshoot"
                app:rrbg_dividerColor="@color/black"
                app:rrbg_dividerSize="1dp"
                app:rrbg_radius="10dp"
                app:rrbg_selectorColor="@color/orange"
                app:rrbg_selectorSize="4dp">

                <co.ceryle.radiorealbutton.RadioRealButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:rrb_drawableHeight="36dp"
                    app:rrb_drawablePadding="8dp"
                    app:rrb_drawableWidth="36dp"
                    app:rrb_ripple="true"
                    app:rrb_rippleColor="@color/black"
                    app:rrb_text="boy"
                    app:rrb_textColor="@color/black"/>


                <co.ceryle.radiorealbutton.RadioRealButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:rrb_drawableGravity="right"
                    app:rrb_drawableHeight="36dp"
                    app:rrb_drawablePadding="8dp"
                    app:rrb_drawableWidth="36dp"
                    app:rrb_ripple="true"
                    app:rrb_rippleColor="@color/black"
                    app:rrb_text="girl"
                    app:rrb_textColor="@color/black"/>

            </co.ceryle.radiorealbutton.RadioRealButtonGroup>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin">

            <co.ceryle.radiorealbutton.RadioRealButtonGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:rrbg_animateDrawables_enter="overshoot"
                app:rrbg_animateTexts_enter="overshoot"
                app:rrbg_dividerColor="@color/black"
                app:rrbg_dividerSize="1dp"
                app:rrbg_radius="10dp"
                app:rrbg_selectorColor="@color/orange"
                app:rrbg_selectorSize="6dp">

                <co.ceryle.radiorealbutton.RadioRealButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:rrb_ripple="true"
                    app:rrb_rippleColor="@color/black"
                    app:rrb_text="yes"
                    app:rrb_textColor="@color/black"/>


                <co.ceryle.radiorealbutton.RadioRealButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:rrb_drawableGravity="right"
                    app:rrb_ripple="true"
                    app:rrb_rippleColor="@color/black"
                    app:rrb_text="no"
                    app:rrb_textColor="@color/black"/>

            </co.ceryle.radiorealbutton.RadioRealButtonGroup>

        </RelativeLayout>


        <com.unstoppable.submitbuttonview.SubmitButton
            android:id="@+id/btn_releaseSubmit"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_margin="@dimen/margin"
            app:buttonColor="@color/orange"
            app:succeedColor="@color/orange"
            app:failedColor="@color/darkRed"
            app:buttonText="提交"/>


    </LinearLayout>




</ScrollView>