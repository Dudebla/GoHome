<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/ll_memberReleaseLinear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/background">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:layout_marginTop="@dimen/margin">


            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/et_releaseName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/margin"
                android:hint="宠物姓名"
                app:met_iconLeft="@drawable/name_selected"
                app:met_baseColor="@color/orange"
                app:met_primaryColor="@color/orange" />

        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin"
            android:background="@color/white">

            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/et_releaseAge"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="宠物年龄"
                android:layout_marginHorizontal="@dimen/margin"
                app:met_iconLeft="@drawable/age_selected"
                app:met_baseColor="@color/orange"
                app:met_primaryColor="@color/orange"/>

        </FrameLayout>


        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:layout_marginTop="@dimen/margin">

            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/et_releaseType"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="宠物类型"
                android:layout_marginHorizontal="@dimen/margin"
                app:met_iconLeft="@drawable/type_selected"
                app:met_baseColor="@color/orange"
                app:met_primaryColor="@color/orange"/>

        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:layout_marginTop="@dimen/margin">

            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/et_releaseDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="宠物描述（性格等）"
                android:layout_marginHorizontal="@dimen/margin"
                app:met_iconLeft="@drawable/text_selected"
                app:met_baseColor="@color/orange"
                app:met_primaryColor="@color/orange"
                android:maxLines="2"/>

        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/margin"
            android:background="@color/white">

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_l"
                android:layout_gravity="center">

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:src="@drawable/gender_selected"/>


            </FrameLayout>


            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin">



                <co.ceryle.radiorealbutton.RadioRealButtonGroup
                    android:id="@+id/radGro_releaseGender"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:rrbg_animateDrawables_enter="overshoot"
                    app:rrbg_animateTexts_enter="overshoot"
                    app:rrbg_dividerColor="@color/black"
                    app:rrbg_dividerSize="1dp"
                    app:rrbg_radius="10dp"
                    app:rrbg_selectorColor="@color/orange"
                    app:rrbg_selectorSize="4dp"
                    app:rrbg_backgroundColor="@color/yellow">

                    <co.ceryle.radiorealbutton.RadioRealButton
                        android:id="@+id/radBut_releaseGenderBoy"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:rrb_ripple="true"
                        app:rrb_rippleColor="@color/black"
                        app:rrb_text="男生"
                        app:rrb_textColor="@color/black" />


                    <co.ceryle.radiorealbutton.RadioRealButton
                        android:id="@+id/radBut_releaseGenderGirl"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:rrb_ripple="true"
                        app:rrb_rippleColor="@color/black"
                        app:rrb_text="女生"
                        app:rrb_textColor="@color/black"/>

                </co.ceryle.radiorealbutton.RadioRealButtonGroup>

            </RelativeLayout>


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/margin"
            android:background="@color/white">

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_l"
                android:layout_gravity="center">

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:src="@drawable/sterilization_selected"/>


            </FrameLayout>


            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin">



                <co.ceryle.radiorealbutton.RadioRealButtonGroup
                    android:id="@+id/radGro_releaseSterilizine"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:rrbg_animateDrawables_enter="overshoot"
                    app:rrbg_animateTexts_enter="overshoot"
                    app:rrbg_dividerColor="@color/black"
                    app:rrbg_dividerSize="1dp"
                    app:rrbg_radius="10dp"
                    app:rrbg_selectorColor="@color/orange"
                    app:rrbg_selectorSize="4dp"
                    app:rrbg_backgroundColor="@color/yellow">

                    <co.ceryle.radiorealbutton.RadioRealButton
                        android:id="@+id/radBut_releaseSterilizineYes"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:rrb_ripple="true"
                        app:rrb_rippleColor="@color/black"
                        app:rrb_text="已绝育"
                        app:rrb_textColor="@color/black"/>


                    <co.ceryle.radiorealbutton.RadioRealButton
                        android:id="@+id/radBut_releaseSterilizineNo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:rrb_ripple="true"
                        app:rrb_rippleColor="@color/black"
                        app:rrb_text="未绝育"
                        app:rrb_textColor="@color/black"/>

                </co.ceryle.radiorealbutton.RadioRealButtonGroup>

            </RelativeLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/margin"
            android:background="@color/white">

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_l"
                android:layout_gravity="center">

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:src="@drawable/vaccine_selected"/>


            </FrameLayout>


            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin">



                <co.ceryle.radiorealbutton.RadioRealButtonGroup
                    android:id="@+id/radGro_releaseVaccine"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:rrbg_animateDrawables_enter="overshoot"
                    app:rrbg_animateTexts_enter="overshoot"
                    app:rrbg_dividerColor="@color/black"
                    app:rrbg_dividerSize="1dp"
                    app:rrbg_radius="10dp"
                    app:rrbg_selectorColor="@color/orange"
                    app:rrbg_selectorSize="4dp"
                    app:rrbg_backgroundColor="@color/yellow">

                    <co.ceryle.radiorealbutton.RadioRealButton
                        android:id="@+id/radBut_releaseVaccineYes"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:rrb_ripple="true"
                        app:rrb_rippleColor="@color/black"
                        app:rrb_text="已疫苗"
                        app:rrb_textColor="@color/black"/>


                    <co.ceryle.radiorealbutton.RadioRealButton
                        android:id="@+id/radBut_releaseVaccineNo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:rrb_ripple="true"
                        app:rrb_rippleColor="@color/black"
                        app:rrb_text="未疫苗"
                        app:rrb_textColor="@color/black"/>

                </co.ceryle.radiorealbutton.RadioRealButtonGroup>

            </RelativeLayout>





        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/white"
            android:layout_marginTop="@dimen/margin">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin"
                android:layout_marginHorizontal="@dimen/margin_l"
                android:orientation="horizontal">

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/photo_selected"/>
                </FrameLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin"
                    android:text="选择图片："
                    android:layout_gravity="center"
                    android:textSize="@dimen/font_size_xs"
                    android:textColor="@color/orange"/>


            </LinearLayout>


            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/margin"
                android:layout_marginTop="@dimen/margin">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_releaseImg"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    android:overScrollMode="never" />

            </FrameLayout>



        </LinearLayout>












