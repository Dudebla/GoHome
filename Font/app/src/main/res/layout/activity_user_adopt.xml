<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/ll_userAdoptLinear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/background"
        android:focusable="true"
        android:focusableInTouchMode="true">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:layout_marginTop="@dimen/margin">
            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/et_adoptUserName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/margin"
                android:hint="您的姓名"
                app:met_iconLeft="@drawable/user_me"
                app:met_baseColor="@color/orange"
                app:met_primaryColor="@color/orange" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:layout_marginTop="@dimen/margin">
            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/et_adoptUserPhone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/margin"
                android:hint="您的电话"
                app:met_iconLeft="@drawable/phone"
                app:met_baseColor="@color/orange"
                app:met_primaryColor="@color/orange" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:layout_marginTop="@dimen/margin">
            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/et_adoptUserAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/margin"
                android:hint="您的地址"
                app:met_iconLeft="@drawable/address"
                app:met_baseColor="@color/orange"
                app:met_primaryColor="@color/orange" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:layout_marginTop="@dimen/margin">
            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/et_adoptUserJob"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/margin"
                android:hint="您的职业"
                app:met_iconLeft="@drawable/user_job"
                app:met_baseColor="@color/orange"
                app:met_primaryColor="@color/orange" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:layout_marginTop="@dimen/margin"
            android:padding="12dp">
            <fj.edittextcount.lib.FJEditTextCount
                android:id="@+id/et_adoptDesc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:etHint="请简要描述领养理由..."
                app:etLineColor="@color/colorAccent"
                app:etMaxLength="200"
                app:etMinHeight="100dp"
                etPromptPosition="promptDn"
                app:etPromptTextColor="@color/colorAccent"
                app:etPromptTextSize="16sp"
                app:etTextColor="@color/black"
                app:etTextSize="16sp"
                app:etType="singular"
                />
        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin">
            <br.com.simplepass.loadingbutton.customViews.CircularProgressButton
                android:id="@+id/btn_adoptSubmit"
                android:layout_gravity="center"
                android:layout_margin="@dimen/margin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="提交"
                android:textColor="@color/white"
                android:background="@drawable/btn_background"
                app:spinning_bar_width="4dp"
                app:spinning_bar_color="#FFF"
                app:spinning_bar_padding="6dp" />
        </FrameLayout>

    </LinearLayout>

</ScrollView>