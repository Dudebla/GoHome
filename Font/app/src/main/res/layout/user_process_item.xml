<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="12dp"
        android:layout_marginVertical="7dp"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?android:attr/selectableItemBackground"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="13dp"
            android:paddingVertical="15dp">

            <ImageView
                android:id="@+id/user_iv_petPortrait"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:scaleType="centerCrop" />

            <TextView
                android:id="@+id/user_tv_petNickname"
                android:layout_width="match_parent"
                android:layout_height="23dp"
                android:layout_alignRight="@+id/user_iv_petPortrait"
                android:layout_alignBottom="@+id/user_iv_petPortrait"
                android:background="#34000000"
                android:gravity="center"
                android:maxLines="1"
                android:text="宠物昵称"
                android:textColor="#ffffff"
                android:textStyle="bold"
                android:typeface="serif" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignTop="@+id/user_iv_petPortrait"
                android:layout_alignBottom="@+id/user_iv_petPortrait"
                android:layout_marginLeft="35dp"
                android:layout_toRightOf="@+id/user_iv_petPortrait"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/user_iv_pro2"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/user_undefined" />

                    <TextView
                        android:id="@+id/user_tv_pro2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:maxLines="1"
                        android:text="暂未通过申请"
                        android:textColor="@color/black" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/user_iv_pro1"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/user_undefined" />

                    <TextView
                        android:id="@+id/user_tv_pro1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:maxLines="1"
                        android:text="暂未审核"
                        android:textColor="@color/black" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/user_iv_pro"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/user_undefined" />

                    <TextView
                        android:id="@+id/user_tv_pro"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:maxLines="1"
                        android:text="暂未提交"
                        android:textColor="@color/black" />

                </LinearLayout>

            </LinearLayout>

            <TextView
                android:id="@+id/user_tv_userText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/user_iv_petPortrait"
                android:layout_marginTop="15dp"
                android:ellipsize="end"
                android:lineSpacingExtra="2.5dp"
                android:maxLines="3"
                android:text="用户文字" />

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>